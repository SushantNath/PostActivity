		<f:Form id="productionFormId"
			editable="false">
			<f:title>
				<core:Title text="Activity confirmation" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
					
			</f:layout>
			<f:formContainers>
				<f:FormContainer >
					<f:formElements>
						<f:FormElement label="Production Order">
							<f:fields>
								<Input id="idOrder1" width="30%" class="ColInput" editable="false"/>
									<Label id="idLOper1" design="Bold" width="8rem" text="Operation" class="sapUiTinyMarginBegin ColLabel"/>
					<Input id="idOper1" width="8rem" class="ColInput" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Work Center">
							<f:fields>
							<Input id="idWork1" width="30%" class="ColInput" editable="false"/>
								<Input id="idDesc1" class="ColInput" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Material">
							<f:fields>
							<Input id="idMat1" width="30%" class="ColInput" editable="false"/>
							<Input id="idMatD1" class="ColInput" editable="false"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Last activity confirmation">
							<f:fields>
								<Input id="idQact1" width="30%" class="ColInput" editable="false"/>
							<Input id="idATime1" width="30%" class="ColInput" editable="false"/>
					<Input id="idAStat1" width="30%" class="ColInput" editable="false"/>
					<Input id="idAUnit1" width="30%" class="ColInput" editable="false"/>
						<Label id="idConf" class="ColInput"/>
					<Label id="idReason" class="ColInput"/>		
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer >
					<f:formElements>
						<f:FormElement label="Confirmation Type">
							<f:fields>
								<ComboBox id="DropDown" width="30%" change=".changeConfirmation"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Number of Operators">
							<f:fields>
							<Input id="idNumber1" width="30%" class="ColInput" editable="true" enabled="false"/>
							</f:fields>
						</f:FormElement>
							<f:FormElement label="Reason for Deviation">
							<f:fields>
							<Input id="idReason1" width="30%" class="ColInput" placeholder="{i18n>Select}" valueHelpRequest="onReasonF4" change="onReasonF4Change"
						showValueHelp="true" value="{GET_REASONModel>/Aufnr}" enabled="false"/>
							</f:fields>
						</f:FormElement>
							<f:FormElement label="Date">
							<f:fields>
							<DatePicker id="idDate1" width="30%" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy" class="sapUiSmallMarginBottom"/>
							</f:fields>
						</f:FormElement>
							<f:FormElement label="Time">
							<f:fields>
							<TimePicker id="idTime1" width="30%" valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" class="sapUiSmallMarginBottom"/>
				
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	
		<beginButton>
			<Button text="Save" press=".fConfirm1"/>
		</beginButton>
		<endButton>
			<Button text="Close" press=".closeDialog"/>
		</endButton>
	</Dialog>
